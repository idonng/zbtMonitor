<script type="text/javascript">
	function goPage(newURL) {
		if (newURL != "") {
			if (newURL == "-") {
				resetMenu();
			} else {
				document.location.href = newURL;
			}
		}
	}
	function resetMenu() {
		document.gomenu.selector.selectedIndex = 2;
	}
	

	$(f_initGrid()); 
    function f_initGrid(){
	//首页加载舆情数据
    var grid;
	var urlPath = "${ctx}/Top10PublicOpinion.do";		
  	var arr=new Array("#xinwen","#luntan","#boke","#weixin","#weibo","#positive","#negative");
 	for (i=0;i<arr.length;i++)
 	{
 	 if(arr[i]=="#xinwen")
 	  {
 	  var resultType="2";
  	  var resultEmotion="null";
 	  }
 	   if(arr[i]=="#luntan")
 	  {
 	  var resultType="3";
  	  var resultEmotion="null";
 	  }
 	   if(arr[i]=="#boke")
 	  {
 	  var resultType="4";
  	  var resultEmotion="null";
 	  }
 	   if(arr[i]=="#weixin")
 	  {
 	  var resultType="5";
  	  var resultEmotion="null";
 	  }
 	  if(arr[i]=="#weibo")
 	  {
 	  var resultType="1";
  	  var resultEmotion="null";
 	  }
 	   if(arr[i]=="#positive")
 	  {
 	  	var resultType="null";
  		var resultEmotion="1"; 
 	  }
 	   if(arr[i]=="#negative")
 	  {
 	  	var resultType="null";
  		var resultEmotion="3";
 	  } 
  		grid= $(arr[i]).ligerGrid({
		    columns: [
            { display: '标题', name: 'resultTitle',width:"60%",align:'left'},
            { display: '作者', name: 'resultAuthor',width:"20%"},
           	{ display: '发布时间', name: 'resultBody',width:"20%"},
            ],  
            parms:[{name:"resultType",value:resultType},{name:"resultEmotion",value:resultEmotion}], 
            url : urlPath,
            record : 10,
            usePager: false, 
			isScroll:false,
            root :"list",
            width:"99.8%",
            height:"100%",
            rowHeight:"26",
            headerRowHeight: 0,
        });
        }

    //首页加载媒体覆盖
    var psMedPieChar = echarts.init(document.getElementById('medPercent'));
 	 //查询  
 	 urlPath="${ctx}/overmedpie.do";
 	  psMedPieChar.clear();
        psMedPieChar.showLoading({text: '正在努力的读取数据中...'});
        $.ajax({
			type : "POST",
			url : urlPath,
			data : {
				'timeType':"一周内",			
				'mediaType1':2,
				'mediaType2':3,
				'mediaType3':4,
				'mediaType4':1,
				'mediaType5':5
			},
			dataType : "json",
			success : function(data) { 
				var opt= $.parseJSON(data);
				
                psMedPieChar.setOption(opt);
                psMedPieChar.hideLoading();
			},
			error : function(data) {
				psMedPieChar.clear();
			}
		});
		
	//首页加载舆情走势
	var psLineChar = echarts.init(document.getElementById('placeholder'));
 		 //查询  
		var urlPath="${ctx}/overall.do";  
		psLineChar.clear();
        psLineChar.showLoading({text: '正在努力的读取数据中...'});
        $.ajax({
			type : "POST",
			url : urlPath,
			data : {
				'timeType':"一周内",			
				'mediaType1':2,
				'mediaType2':3,
				'mediaType3':4,
				'mediaType4':1,
				'mediaType5':5			
			},			
			dataType : "json",
			success : function(data) {			
				var opt= $.parseJSON(data);
                psLineChar.setOption(opt);
                psLineChar.hideLoading();
			},
			error : function(data) {
				psLineChar.clear();
			}
		});
		
   }
  
</script>




